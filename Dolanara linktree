  <script>
    // ---------- Configuration: change these if needed ----------
    const bgImagePath = "assets/bg.jpg"; // replace with the family picnic image (optional)
    // ---------------------------------------------------------

    // Set background image if exists
    const bgEl = document.getElementById('bgPhoto');
    fetch(bgImagePath, { method: 'HEAD' })
      .then(r => {
        if (r.ok) {
          bgEl.style.backgroundImage = `url('${bgImagePath}')`;
        } else {
          bgEl.style.opacity = 0; // keep gradient-only if not found
        }
      }).catch(e => {
        bgEl.style.opacity = 0;
      });

    // Logo missing handler: replace with text placeholder so layout stays nice
    function logoMissing(){
      const wrap = document.getElementById('logoWrap');
      wrap.classList.add('missing');
      wrap.innerHTML = '<div style="text-align:center">Logo<br/>Dolanara</div>';
    }

    // Reveal on scroll simple IntersectionObserver
    const reveals = document.querySelectorAll('.reveal');
    const io = new IntersectionObserver((items, obs) => {
      items.forEach(i => {
        if (i.isIntersecting) {
          i.target.classList.add('visible');
          obs.unobserve(i.target);
        }
      });
    }, {threshold: 0.12});
    reveals.forEach(r => io.observe(r));

    // Page fade-in
    document.addEventListener('DOMContentLoaded', () => {
      document.getElementById('pageWrap').style.opacity = 0;
      setTimeout(()=>{ document.getElementById('pageWrap').style.transition = 'opacity .6s ease'; document.getElementById('pageWrap').style.opacity = 1 }, 10);
    });

    // Optional: smooth scroll to top if linking from somewhere
    if ('scrollBehavior' in document.documentElement.style) {
      // supported
    }

    // Accessibility: keyboard focus visible style (basic)
    document.addEventListener('keyup', (e) => {
      if (e.key === 'Tab') document.body.classList.add('user-tabbed');
    });

  </script>
